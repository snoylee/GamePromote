<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context="com.xygame.sg.activity.personal.SortCategoryActivity">
    <include layout="@layout/sg_head_layout" />

    <include layout="@layout/gray_divider_line" />

    <include layout="@layout/select_category_item" />
    <include layout="@layout/gray_divider_line" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="拍摄小类" />
    <include layout="@layout/gray_divider_line" />
    <ListView
        android:id="@+id/second_category_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

</LinearLayout>
