<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_background"
        android:orientation="vertical" >

        <include layout="@layout/gray_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/body_info_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/body_label"
                android:textColor="@color/color_grey_999999" />

            <LinearLayout
                android:id="@+id/body_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/height_tv"
                    style="@style/InfoIconStyle"
                    android:drawableTop="@drawable/height_icon"
                    android:text="@string/no_edit" />

                <TextView
                    android:id="@+id/weight_tv"
                    style="@style/InfoIconStyle"
                    android:drawableTop="@drawable/weight_icon"
                    android:text="@string/no_edit" />

                <TextView
                    android:id="@+id/bra_tv"
                    style="@style/InfoIconStyle"
                    android:drawableTop="@drawable/bra_icon"
                    android:text="@string/no_edit" />

                <TextView
                    android:id="@+id/bwh_tv"
                    style="@style/InfoIconStyle"
                    android:drawableTop="@drawable/bwh_icon"
                    android:text="@string/no_edit" />

                <TextView
                    android:id="@+id/foot_tv"
                    style="@style/InfoIconStyle"
                    android:drawableTop="@drawable/foot_icon"
                    android:text="@string/no_edit"
                    android:visibility="gone"/>
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                layout="@layout/gray_divider_line" />

            <TextView
                android:id="@+id/record_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/record_label"
                android:textColor="@color/color_grey_999999" />

            <!--<LinearLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal" >-->

                <!--<LinearLayout-->
                    <!--android:id="@+id/record_rl"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="15dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:orientation="vertical" >-->
                <!--</LinearLayout>-->

                <!--<ImageView-->
                    <!--android:id="@+id/record_rl_arrow_iv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:src="@drawable/arrows" />-->
            <!--</LinearLayout>-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/record_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"></LinearLayout>

                <ImageView
                    android:id="@+id/record_rl_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                layout="@layout/gray_divider_line" />

            <TextView
                android:id="@+id/summary_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/summary_label"
                android:textColor="@color/color_grey_999999" />

            <RelativeLayout
                android:id="@+id/summary_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/summary_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:hint="暂无简介，请添加！" />

                <ImageView
                    android:id="@+id/summary_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                layout="@layout/gray_divider_line" />

            <TextView
                android:id="@+id/style_tip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/style_label"
                android:textColor="@color/color_grey_999999" />

            <RelativeLayout
                android:id="@+id/style_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <LinearLayout
                    android:id="@+id/style_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/selet_style_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="请选择你的风格" />
                    <!-- android:paddingBottom="10dp" -->
                    <!-- android:paddingRight="18dp" -->
                    <!-- android:paddingTop="10dp" -->


                    <!-- <com.flyco.roundview.RoundTextView -->
                    <!-- android:id="@+id/rtv_2" -->
                    <!-- android:layout_width="wrap_content" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:layout_marginLeft="10dp" -->
                    <!-- android:gravity="center" -->
                    <!-- android:paddingBottom="10dp" -->
                    <!-- android:paddingLeft="18dp" -->
                    <!-- android:paddingRight="18dp" -->
                    <!-- android:paddingTop="10dp" -->
                    <!-- android:text="性感" -->
                    <!-- rv:rv_cornerRadius="10dp" -->
                    <!-- rv:rv_strokeWidth="1dp" /> -->

                </LinearLayout>

                <ImageView
                    android:id="@+id/style_arrow_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                layout="@layout/gray_divider_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="我的拍摄类型"
                android:textColor="@color/color_grey_999999" />

            <LinearLayout
                android:id="@+id/paishe_style_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paishe_style_rl_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:hint="请选择你的拍摄类型" />
                <ImageView
                    android:id="@+id/paishe_style_rl_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/gray_divider_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/basic_info_label"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp" />

        <include layout="@layout/gray_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/nick_name_rl"
                style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="昵称" />

                <ImageView
                    android:id="@+id/nick_name_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="模范号" />

                <TextView
                    android:id="@+id/mofan_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="模范号" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows"
                    android:visibility="gone" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别" />

                <TextView
                    android:id="@+id/sex_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="性别" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows"
                    android:visibility="gone" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout
                android:id="@+id/userinfoAge"
                style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="年龄" />

                <ImageView
                    android:id="@+id/age_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout
                android:id="@+id/userInfoCountry"
                style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="国籍" />

                <TextView
                    android:id="@+id/country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="国籍" />

                <ImageView
                    android:id="@+id/country_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout
                android:id="@+id/userInfoCity"
                style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所在地" />

                <TextView
                    android:id="@+id/area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="城市" />

                <ImageView
                    android:id="@+id/area_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                layout="@layout/gray_divider_line" />

            <RelativeLayout
                android:id="@+id/job_type_rl"
                style="@style/BasicInfoItemStyle" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="职业" />

                <TextView
                    android:id="@+id/job_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:hint="职业" />

                <ImageView
                    android:id="@+id/job_type_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows" />
            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/gray_divider_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="评价"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp" />

        <include layout="@layout/gray_divider_line" />

        <include layout="@layout/comment_outline_layout" />

    </LinearLayout>

</ScrollView>