<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <include layout="@layout/sg_head_layout" />


    <include layout="@layout/gray_divider_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <include layout="@layout/gray_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/opinion_et"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入你的意见或建议，可以帮助我们更好的改进产品，谢谢！"
            android:maxEms="200"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="0/500"
            android:textColor="@color/dark_gray" />
    </LinearLayout>
    <include layout="@layout/gray_divider_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <include layout="@layout/gray_divider_line" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/black"
            android:textSize="@dimen/login_14sp" />

        <EditText
            android:id="@+id/contact_way_et"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入常用手机或邮箱"
            android:textColor="@color/black"
            android:textSize="@dimen/login_14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话"
            android:textColor="@color/text_gray_m"
            android:textSize="@dimen/login_14sp" />

        <TextView
            android:id="@+id/service_phone_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_s"
            android:textSize="@dimen/login_14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服QQ"
            android:textColor="@color/text_gray_m"
            android:textSize="@dimen/login_14sp" />

        <TextView
            android:id="@+id/service_qq_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_s"
            android:textSize="@dimen/login_14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服邮箱"
            android:textColor="@color/text_gray_m"
            android:textSize="@dimen/login_14sp" />

        <TextView
            android:id="@+id/service_mail_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_s"
            android:textSize="@dimen/login_14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作时间"
            android:textColor="@color/text_gray_m"
            android:textSize="@dimen/login_14sp" />

        <TextView
            android:id="@+id/service_time_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray_s"
            android:textSize="@dimen/login_14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/submit_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/shape_rect_dark_green"
        android:gravity="center"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</LinearLayout>
