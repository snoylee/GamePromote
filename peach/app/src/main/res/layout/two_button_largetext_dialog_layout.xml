<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_rect_white">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogTitle"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/dark_gray" />

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tipText"
            android:layout_margin="10dp"
            android:background="@drawable/mq_input_frame_icon"
            android:gravity="top"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/titleLine"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/inputText"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/titleLine"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comfirmView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sg_comm_comfirm"
                android:textColor="@color/deep_green"
                android:textSize="@dimen/login_16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/cancelView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sg_comm_cancel"
                android:textColor="@color/deep_green"
                android:textSize="@dimen/login_16sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>