<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_divider" />
    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f6f6f8"
        android:layout_below="@+id/divider_line"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/modelView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/modelIcon"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/modelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="红人"
                android:textSize="@dimen/main_frame_text_size"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/noticeView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/newsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/newsIcon"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/newsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="首页"
                    android:textSize="@dimen/main_frame_text_size"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sheyishi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/noticeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/noticeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="立即约"
                android:textSize="@dimen/main_frame_text_size"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/gropView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/newsView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/gropIcon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/gropText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:text="消息"
                    android:textSize="@dimen/main_frame_text_size"/>
            </LinearLayout>

            <TextView
                android:id="@+id/nuReadNews"
                android:layout_width="@dimen/main_frame_ico"
                android:layout_height="@dimen/main_frame_ico"
                android:layout_alignLeft="@+id/newsView2"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_circle_red"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textSize="@dimen/main_frame_pop_text_size"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personalView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp" >

            <LinearLayout
                android:id="@+id/newsView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/personalIcon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/personalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:text="我的"
                    android:textSize="@dimen/main_frame_text_size"/>
                </LinearLayout>

            <TextView
                android:layout_width="@dimen/main_frame_ico"
                android:layout_height="@dimen/main_frame_ico"
                android:layout_alignLeft="@+id/newsView1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_circle_red"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/white"
                android:textSize="@dimen/main_frame_pop_text_size"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>